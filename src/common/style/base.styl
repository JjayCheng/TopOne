html,body 
  width 100%
  height 100%
  background-color #5A6D7C
  overflow hidden

input
  border-radius 5px
  outline none
  border none
  background #eee
  color #666
  font-size 16px
button
  border 1px solid #ddd
  background #eee
  color #666
  border-radius 6px
  padding 3px 10px
  cursor pointer
  outline none
  &:active
    background #ccc
  &.primary
    background rgb(50, 76, 98)
    color #fff
    &:active
      background rgb(124, 142, 166)